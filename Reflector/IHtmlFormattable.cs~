using System;
using System.Text;
using System.IO;
using System.Xml;
using System.Xml.Serialization;

namespace Reflector
{
	/// <summary>
	/// I html formattable.
	/// </summary>
	public interface IHtmlFormattable
	{
		/// <summary>
		/// Writes HTML to a <see cref="XmlWriter"/>
		/// </summary>
		/// <param name="xw">A <see cref="XmlWriter"/> to write HTML to</param>
		void WriteHtml(XmlWriter xw);
	}
}

